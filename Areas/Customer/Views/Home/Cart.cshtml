@using OnlineShop.Models
@using OnlineShop.Utility
@using Microsoft.AspNetCore.Http
@model List<Products>

@{ ViewData["Title"] = "Cart"; }


<h1>Your Cart</h1>

<br />
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Product Type</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/@item.Image" width="200px" height="150px" />
                        </td>
                        <td>@item.Name</td>
                        <td>R @item.Price   </td>
                        <td>@item.ProductTypes.ProductType</td>
                        <td>@item.ProductColor</td>
                       <td>@item.Quantity</td>

                        <td>
                            <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
        </div>
        <div class="col-6 text-right">

            <h4 asp->Total Amount : R @Model.Sum((c => c.Price))  </h4>
       
            <h4>Grand Total (INCLUDING DELIVERY) : </h4> <h3>R @Model.Sum(c => c.Price + 100) </h3>
            <a asp-area="Customer" asp-action="Create" asp-controller="Order" class="btn btn-info">Process to Checkout</a>
        </div>
    </div>
  



