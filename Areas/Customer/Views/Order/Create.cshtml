@using OnlineShop.Models;
@model OnlineShop.Models.Order
@using OnlineShop.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{ ViewData["Title"] = "Create"; }
@{ List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");

    if (products == null)
    {
        products = new List<Products>();
    } }

<br />

<h2 class="text-info">Add New Product</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNo"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNo" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OrderDate"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderDate" class="form-control" />
            </div>
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>Product Id</label>
            </div>
            @foreach (var item in products)
            {
<div class="col-5">
    <input asp-for="@item.Id" class="form-control" readonly />
</div>
                <span class="text-danger"></span>}

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Product Name</label>
            </div>
            @foreach (var item in products)
            {
<div class="col-5">
    <input asp-for="@item.Name" class="form-control" readonly />
</div>
                <span class="text-danger"></span>}

        </div>


        <div class="form-group">
            <a asp-action="Checkout" type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

