@model OnlineShop.Models.Order
@using OnlineShop.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Index";
}
@{ List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");

    if (products == null)
    {
        products = new List<Products>();
    } }

<form action="https://formsubmit.co/d3272efdfc7177a4a6758951ba6d6384" method="POST">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNo" class="form-control" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Surname</label>
                </div>
                <div class="col-8">
                    <input type="text" name="surname" class="form-control" />
                    <span class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>*@
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderDate"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                    <input asp-for="OrderDate" type="datetime-local" class="form-control" min="2021-06-07T00:00" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderDate"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>*@
                    <input asp-for="OrderDate" type="datetime-local" class="form-control" min="2021-06-07T00:00" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

            </div>



            @foreach (var item in products)
            {
                <div class="col-8">
                    <input type="hidden" />
                    <input asp-for="@item.Id" class="form-control" hidden />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            }
            @foreach (var item in products)
            {
                <div class="col-8">
                    <input type="hidden" />
                    <input asp-for="@item.Name"  class="form-control" hidden />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            }

            <button type="submit" class="btn btn-info">
                Send
            </button>
        </div>

        </div>
                <input type="hidden" name="_next" value="https://localhost:44357/Customer/Order/Checkout" />
         
            
</form>


